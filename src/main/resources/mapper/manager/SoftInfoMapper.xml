<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ttit.tzzd.manager.dao.SoftInfoDao">
    <sql id="baseCols">
        SELECT t1.id,
               t1.dict_soft_type `softType`,
               t1.fk_atta_id     `attaId`,
               t1.creator,
               t1.create_time,
               t1.is_del,
               t2.`name`
        FROM soft_info t1
                 INNER JOIN sys_attachment t2 ON t1.fk_atta_id = t2.id AND t2.is_del = '0'
    </sql>
    <select id="searchPage" parameterType="String" resultType="com.ttit.tzzd.manager.vo.SoftInfoVo">
        <include refid="baseCols"/>
        <where>
            t1.is_del = '0'
            <if test="softType!=null and softType!=''">
                AND t1.dict_soft_type = #{softType}
            </if>
            <if test="keyword!=null and keyword!=''">
                <bind name="pattern" value="'%' + _parameter.keyword + '%'"/>
                AND (
                t2.`name` LIKE #{pattern}
                )
            </if>
        </where>
    </select>


    <select id="findById" parameterType="String" resultType="com.ttit.tzzd.manager.vo.SoftInfoVo">
        <include refid="baseCols"/>
        WHERE t1.id = #{id}
    </select>

    <update id="del" parameterType="String">
        UPDATE soft_info
        SET is_del = 1
        WHERE id = #{id}
    </update>

    <insert id="add" parameterType="com.ttit.tzzd.manager.entity.SoftInfo">
        INSERT INTO soft_info(id,
                              dict_soft_type,
                              `fk_atta_id`,
                              is_del)
        VALUES (#{id},
                #{softType},
                #{attaId},
                #{isDel})
    </insert>
</mapper>